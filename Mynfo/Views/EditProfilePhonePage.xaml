<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             x:Class="Mynfo.Views.EditProfilePhonePage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <NavigationPage.TitleView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image 
                Grid.ColumnSpan = "3"
                Margin = "0,0,10,0"
                HorizontalOptions = "Center"
                Source = "logo_superior.png" 
                VerticalOptions = "Center"
                WidthRequest = "85"/>
            <ImageButton 
                BackgroundColor = "Transparent"
                Clicked = "Back_Clicked"
                Grid.Column = "0"
                HeightRequest = "40"
                HorizontalOptions = "Start"
                Source = "ic_navigation_arrow_back"
                VerticalOptions = "Start"
                WidthRequest = "40"
                x:Name="BackButton"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView
            BindingContext = "{Binding CreateProfilePhone}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height = "80"/>
                    <RowDefinition Height = "160"/>
                    <RowDefinition Height = "120"/>
                    <RowDefinition Height = "80"/>
                    <RowDefinition />
                    <RowDefinition Height = "120"/>
                </Grid.RowDefinitions>
                <Label 
                    FontAttributes = "Bold"
                    FontSize = "25"
                    Grid.ColumnSpan ="1"
                    Grid.Row = "0"
                    HorizontalOptions = "Center"
                    Text = "{i18n:Translate EditPhone}"
                    TextColor = "{StaticResource MainColor}"
                    VerticalOptions = "Center"/>
                <Image
                    Grid.Row = "1"
                    HeightRequest = "180"
                    Source = "tel2"
                    WidthRequest = "180"/>
                <StackLayout 
                    Grid.Row = "2"
                    Padding = "20">
                    <Label 
                        FontSize = "24" 
                        FontAttributes="Bold"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        Text = "{i18n:Translate NameProfile}"/>
                    <Entry 
                        BackgroundColor = "{StaticResource LoginEntryColor}"
                        FontSize = "21"
                        HorizontalTextAlignment = "Center"
                        HorizontalOptions = "Center"
                        MaxLength = "10"
                        Text = "{Binding Name}"
                        VerticalOptions = "Center" 
                        WidthRequest = "300" 
                        x:Name = "EntryName"/>
                </StackLayout>
                <StackLayout 
                    Grid.Row = "3">
                    <Label 
                        FontSize = "24" 
                        FontAttributes="Bold"
                        HorizontalOptions = "Center"
                        Text = "{i18n:Translate NumberPhone}" 
                        VerticalOptions = "Center" />
                    <Entry 
                        BackgroundColor = "{StaticResource LoginEntryColor}"
                        FontSize = "21"
                        HorizontalTextAlignment = "Center"
                        HorizontalOptions = "Center"
                        Keyboard = "Telephone"
                        MaxLength = "10"
                        Text = "{Binding Number}"
                        VerticalOptions = "Center" 
                        WidthRequest = "300"
                        x:Name = "EntryPhone"/>
                </StackLayout>
                <StackLayout
                        Grid.Row = "4"
                        Orientation = "Horizontal"
                        Padding = "40">
                    <Button 
                        BackgroundColor = "{StaticResource MainColor}"
                        BorderRadius = "23"
                        Clicked = "Save_Clicked"
                        HeightRequest = "50"
                        HorizontalOptions = "Center"
                        Grid.Row = "5"
                        Text = "{i18n:Translate Save}"
                        TextColor = "{StaticResource Dark_FontColor}"
                        VerticalOptions = "Center"
                        WidthRequest = "150"
                        x:Name = "ButtonSave"/>
                    <Button 
                        BackgroundColor = "{StaticResource MainColor}"
                        BorderRadius = "23"
                        Clicked = "Delete_Clicked"
                        HeightRequest = "50"
                        HorizontalOptions = "Center"
                        IsEnabled = "True"
                        Text = "{i18n:Translate Delete}"
                        TextColor = "{StaticResource Dark_FontColor}"
                        VerticalOptions = "Center"
                        WidthRequest = "150" 
                        x:Name = "ButtonDelete"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>