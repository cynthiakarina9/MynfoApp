<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mynfo.Views.HomePage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundColorLigth}, Dark={StaticResource BackgroundColorDark}}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#FFFF" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <NavigationPage.TitleView>
        <Grid 
            Padding = "0" 
            BackgroundColor = "Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ImageButton
                BackgroundColor = "Transparent"
                Grid.ColumnSpan = "3"
                Margin = "40,0,0,0"
                HorizontalOptions = "Center"
                VerticalOptions = "Center"
                WidthRequest = "75"
                x:Name="ButtonBox"/>
            <ImageButton  
                BackgroundColor = "Transparent"
                Clicked = "ForeingBoxes_Clicked"
                Grid.Column = "3" 
                Margin = "50,0,0,0"
                HeightRequest = "30"
                Source = "Conections"
                VerticalOptions = "End"
                WidthRequest = "30"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid
            BindingContext = "{Binding Home}">
            <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "180"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CollectionView 
                        ItemsSource="{Binding Box}"
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout 
                                Orientation="Vertical"
                                Span="1" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <StackLayout
                                        HorizontalOptions="Center">
                                        <Button
                                            BackgroundColor="{StaticResource MainColor}"
                                            Clicked="ButtonDefault"
                                            CornerRadius="25"
                                            HeightRequest="140"
                                            IsVisible="{Binding IsNull}"
                                            WidthRequest="140"/>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Name}"
                                            TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"/>
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <ContentView>
                                <StackLayout 
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand">
                                    <Label Text="No Boxes yet"/>
                                </StackLayout>
                            </ContentView>
                        </CollectionView.EmptyView>
                    </CollectionView>
                    <CollectionView 
                        ItemsSource="{Binding BoxNoDefault}"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        SelectionMode="Single"
                        SelectionChanged="OnCollectionViewSelectionChanged"
                        x:Name="BoxCollectionView">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout 
                                Orientation="Vertical"
                                Span="3" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <StackLayout
                                        HorizontalOptions="CenterAndExpand">
                                        <Frame
                                            BackgroundColor="LightGray"
                                            CornerRadius="15"
                                            HeightRequest="60"
                                            IsVisible="{Binding MoreOne}"
                                            WidthRequest="60">
                                        </Frame>
                                        <Label
                                            FontSize="12"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Name}"
                                            TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"/>
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <ContentView>
                                <StackLayout 
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand">
                                    <Label Text=""/>
                                </StackLayout>
                            </ContentView>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>
            </ScrollView>
            <Grid
                Grid.Row="0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End">
                <ImageButton
                    BackgroundColor = "Transparent"
                    Clicked = "CreateBox_Clicked"
                    HeightRequest = "60"
                    HorizontalOptions ="CenterAndExpand"
                    Margin="15"
                    Source = "Plus"
                    VerticalOptions="End"
                    WidthRequest = "60"
                    x:Name="CreateBoxBtn"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>