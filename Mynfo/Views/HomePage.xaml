<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mynfo.Views.HomePage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <NavigationPage.TitleView>
        <Grid 
            Padding = "0" 
            BackgroundColor = "Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ImageButton
                BackgroundColor = "Transparent"
                Grid.ColumnSpan = "3"
                Margin = "40,0,0,0"
                HorizontalOptions = "Center"
                VerticalOptions = "Center"
                WidthRequest = "75"
                x:Name="ButtonBox"/>
            <ImageButton  
                BackgroundColor = "Transparent"
                Clicked = "ForeingBoxes_Clicked"
                Grid.Column = "3" 
                Margin = "50,0,0,0"
                HeightRequest = "30"
                Source = "Conections"
                VerticalOptions = "End"
                WidthRequest = "30"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid
            BindingContext = "{Binding Home}">
            <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "180"/>
                        <RowDefinition Height = "*"/>
                        <RowDefinition Height = "*"/>
                        <RowDefinition Height = "Auto"/>
                        <RowDefinition Height = "Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CollectionView 
                        ItemsSource="{Binding Box}"
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout 
                                Orientation="Vertical"
                                Span="1" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <StackLayout
                                        HorizontalOptions="Center">
                                        <!--<ImageButton
                                            Clicked="ButtonDefault"
                                            BackgroundColor="Transparent"
                                            IsVisible="{Binding IsNull}"
                                            HeightRequest="80"
                                            Source="home1.png"
                                            WidthRequest="80"/>-->
                                        <Button
                                            BackgroundColor="{StaticResource MainColor}"
                                            Clicked="ButtonDefault"
                                            CornerRadius="25"
                                            HeightRequest="140"
                                            IsVisible="{Binding IsNull}"
                                            WidthRequest="140"/>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource FontColor}" />
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <ContentView>
                                <StackLayout 
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand">
                                    <Label Text="No Boxes yet"/>
                                </StackLayout>
                            </ContentView>
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <!-- De la box 2 a la 4 -->
                    <StackLayout 
                        Grid.Column = "0"
                        Grid.Row ="1"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox2" />

                    <StackLayout 
                        Grid.Column = "1"
                        Grid.Row ="1"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox3" />

                    <StackLayout 
                        Grid.Column = "2"
                        Grid.Row ="1"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox4" />

                    <!-- De la box 5 a la 7 -->
                    <StackLayout 
                        Grid.Column = "0"
                        Grid.Row ="2"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox5" />

                    <StackLayout 
                        Grid.Column = "1"
                        Grid.Row ="2"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox6" />

                    <StackLayout 
                        Grid.Column = "2"
                        Grid.Row ="2"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox7" />

                    <!-- De la box 8 a la 10 -->
                    <StackLayout 
                        Grid.Column = "0"
                        Grid.Row ="3"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox8" />

                    <StackLayout 
                        Grid.Column = "1"
                        Grid.Row ="3"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox9" />

                    <StackLayout 
                        Grid.Column = "2"
                        Grid.Row ="3"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        x:Name = "LayoutBox10" />

                    <!-- Botón para agregar box nueva-->
                    <BoxView 
                        Grid.ColumnSpan = "3"
                        Grid.Row = "4"/>
                    
                    <ImageButton
                        BackgroundColor = "Transparent"
                        Grid.Column = "2"
                        Grid.Row = "4"
                        HeightRequest = "60"
                        HorizontalOptions ="Center"
                        Source = "Plus"
                        VerticalOptions = "Center"
                        WidthRequest = "60"
                        x:Name="GoToTest"/>
                </Grid>
            </ScrollView>
            <Grid
                Grid.Row="0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End">
                <ImageButton
                    BackgroundColor = "Transparent"
                    Clicked = "CreateBox_Clicked"
                    HeightRequest = "60"
                    HorizontalOptions ="CenterAndExpand"
                    Margin="15"
                    Source = "Plus"
                    VerticalOptions="End"
                    WidthRequest = "60"
                    x:Name="CreateBoxBtn"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>