              Margin="20"
              ItemSelected="OnListViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}"/>
                --><!-- Detail="{Binding Date}" /> --><!--
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>-->
</ContentPage>