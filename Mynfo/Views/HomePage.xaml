<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             x:Class="Mynfo.Views.HomePage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{i18n:Translate Home}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+"
                     Command="{Binding CreateBoxCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Home}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="200" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--Cabecera -->
                <BoxView Grid.ColumnSpan="3"/>
                <Label Text="{i18n:Translate BoxList}" 
                       Grid.ColumnSpan="3"
                       FontSize="25" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />

                <!-- Box principal -->
                <!-- El texto en los botónes es dinámico-->
                <BoxView Grid.Row="1"
                         Grid.ColumnSpan="3"/>
                <Button
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    WidthRequest      ="140"
                    HeightRequest     ="140"
                    CornerRadius      ="70"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource MainColor}"
                    Text="Negocios"
                    TextColor="{StaticResource Dark_FontColor}"
                    FontSize="20"
                    FontAttributes="Bold"/>

                <!-- Primeras 3 boxes -->
                <BoxView Grid.Row="2"/>
                <Button
                    Grid.Row="2"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxActiveColor}"
                    Text="Amigos"
                    TextColor="{StaticResource FontColor}"
                    FontSize="10"
                    FontAttributes="Bold"/>

                <BoxView Grid.Row="2"
                     Grid.Column="1"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxActiveColor}"
                    Text="Trabajo"
                    TextColor="{StaticResource FontColor}"
                    FontSize="10"
                    FontAttributes="Bold"/>

                <BoxView Grid.Row="2"
                     Grid.Column="2"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxActiveColor}"
                    Text="Citas"
                    TextColor="{StaticResource FontColor}"
                    FontSize="10"
                    FontAttributes="Bold"/>

                <!-- De la box 4 a la 6 -->
                <BoxView Grid.Row="3"
                     Grid.ColumnSpan="3"/>

                <BoxView Grid.Row="3"/>
                <Button
                    Grid.Row="3"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxEmptyColor}"
                    IsEnabled="False"/>

                <BoxView Grid.Row="3"
                     Grid.Column="1"/>
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxEmptyColor}"
                    IsEnabled="False"/>

                <BoxView Grid.Row="3"
                     Grid.Column="2"/>
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxEmptyColor}"
                    IsEnabled="False"/>

                <!-- De la box 7 a la 9 -->
                <BoxView Grid.Row="4"
                     Grid.ColumnSpan="3"/>

                <BoxView Grid.Row="4"/>
                <Button
                    Grid.Row="4"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxEmptyColor}"
                    IsEnabled="False"/>

                <BoxView Grid.Row="4"
                     Grid.Column="1"/>
                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxEmptyColor}"
                    IsEnabled="False"/>

                <BoxView Grid.Row="4"
                     Grid.Column="2"/>
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    WidthRequest      ="80"
                    HeightRequest     ="80"
                    CornerRadius      ="40"
                    VerticalOptions   ="Center"
                    HorizontalOptions ="Center"
                    BackgroundColor   ="{StaticResource BoxEmptyColor}"
                    IsEnabled="False"/>

                <!-- Botón para agregar box nueva-->
                <BoxView 
                    Grid.ColumnSpan = "3"
                    Grid.Row = "5"/>
                <Button
                    BackgroundColor ="{StaticResource BackgroundColor}"
                    Command="{Binding CreateBoxCommand}"
                    CornerRadius = "40"
                    FontAttributes="Bold"
                    FontSize= "40"
                    Grid.Row= "5"
                    Grid.ColumnSpan="3"
                    HeightRequest = "80"
                    HorizontalOptions ="Center"
                    Text = "+"
                    TextColor="{StaticResource FontColor}"
                    VerticalOptions = "Center"
                    WidthRequest = "80" />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>