<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             x:Class="Mynfo.Views.ForeingBoxPage"
             BindingContext = "{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundForeignBoxLigth}, Dark={StaticResource BackgroundForeignBoxDark}}">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding ForeingBox}">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="180"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!--Botón para volver a home-->                    
                    <StackLayout 
                        Grid.Column ="2"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Padding="0,10,10,0"
                        x:Name="BackButton" />
                    <!-- Nombre e imagen del usuario foraneo-->
                    <StackLayout
                            Grid.Row="1"
                            Grid.ColumnSpan = "3"
                            HorizontalOptions="Center">
                        <Label 
                            FontAttributes="Bold"
                            FontSize = "28"
                            HorizontalTextAlignment="Center"
                            HorizontalOptions = "Center"
                            TextColor = "{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"
                            VerticalOptions="Center"
                            x:Name="ForeignUserName" />
                        <Line
                            HeightRequest="1"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"/>
                    </StackLayout>
                    <controls:CircleImage
                        Grid.Row = "2"
                        Grid.Column = "1"
                        HeightRequest = "190"
                        WidthRequest = "190"
                        x:Name="ForeignUserImage">
                    </controls:CircleImage>
                    <!-- Listado de perfiles -->
                    <CollectionView 
                        ItemsSource="{Binding ProfilesF}"
                        Grid.Row="3"
                        Grid.ColumnSpan="3"
                        SelectionMode="Single"
                        SelectionChanged="OnCollectionViewSelectionChanged">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                    Span="3" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <StackLayout
                                        HorizontalOptions="CenterAndExpand">
                                        <ImageButton
                                            BackgroundColor="Transparent"
                                            Command="{Binding GoToProfiles}"
                                            HeightRequest="50"
                                            Source="{Binding Logo}"
                                            WidthRequest="50"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding ProfileName}"
                                            FontAttributes="Bold"
                                            TextColor = "{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}" />
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <!--<CollectionView.EmptyView>
                            <ContentView>
                                <StackLayout 
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand">
                                    <Label 
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        HorizontalOptions="Fill"
                                        HorizontalTextAlignment="Center" 
                                        Margin="10,0,10,280"
                                        Text="{i18n:Translate EmptyBox}"
                                        VerticalOptions="CenterAndExpand"/>
                                </StackLayout>
                            </ContentView>
                        </CollectionView.EmptyView>-->
                    </CollectionView>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>