<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             x:Class="Mynfo.Views.ForeingBoxPage"
             BindingContext = "{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor = "#AB4B32">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!--Botón para volver a home-->
                    <StackLayout 
                        Grid.Column ="2"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Padding="0,10,10,0"
                        x:Name="BackButton" />
                    <controls:CircleImage
                        Grid.Row = "1"
                        Grid.Column = "1"
                        HeightRequest = "180"
                        Source = "{Binding User.ImageFullPath}"
                        WidthRequest = "180">
                    </controls:CircleImage>
                    <Label 
                        FontAttributes="Bold"
                        FontSize = "28"
                        Grid.Row="2"
                        Grid.ColumnSpan = "3"
                        HorizontalTextAlignment="Center"
                        HorizontalOptions = "Center"
                        Text = "{Binding User.FullName, StringFormat = '{0}'}"
                        TextColor = "{StaticResource MainColor}" />
                    <StackLayout
                        Grid.Row="3"
                        Grid.Column="0">
                        <ImageButton 
                            BackgroundColor = "Transparent"
                            Source="facebook2"
                            WidthRequest = "70"
                            HeightRequest = "70"/>
                        <Label 
                            FontSize = "15"
                            HorizontalOptions = "Center"
                            Text="Personal"/>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="3"
                        Grid.Column="1">
                        <ImageButton 
                            BackgroundColor = "Transparent"
                            Source="tel2"
                            WidthRequest = "70"
                            HeightRequest = "70"/>
                        <Label 
                            FontSize = "15"
                            HorizontalOptions = "Center"
                            Text="Casa"/>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="3"
                        Grid.Column="2"
                        HeightRequest = "80">
                        <ImageButton 
                            BackgroundColor = "Transparent"
                            Source="mail2"
                            WidthRequest = "70"
                            HeightRequest = "70"/>
                        <Label 
                            FontSize = "15"
                            HorizontalOptions = "Center"
                            Text="Personal"/>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="4"
                        Grid.Column="0"
                        HeightRequest = "80">
                        <ImageButton 
                            BackgroundColor = "Transparent"
                            Source="mail2"
                            WidthRequest = "70"
                            HeightRequest = "70"/>
                        <Label 
                            FontSize = "15"
                            HorizontalOptions = "Center"
                            Text="Negocios"/>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="4"
                        Grid.Column="1"
                        HeightRequest = "80">
                        <ImageButton 
                            BackgroundColor = "Transparent"
                            Source="facebook2"
                            WidthRequest = "70"
                            HeightRequest = "70"/>
                        <Label 
                            FontSize = "15"
                            HorizontalOptions = "Center"
                            Text="Fans"/>
                    </StackLayout>
                    <StackLayout
                        HeightRequest = "80"
                        Grid.Row="4"
                        Grid.Column="2">
                        <ImageButton 
                            BackgroundColor = "Transparent"
                            Source="tel2"
                            WidthRequest = "70"
                            HeightRequest = "70"/>
                        <Label 
                            FontSize = "15"
                            HorizontalOptions = "Center"
                            Text="Celular"/>
                    </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>