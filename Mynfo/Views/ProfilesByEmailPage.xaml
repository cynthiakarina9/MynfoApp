<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             x:Class="Mynfo.Views.ProfilesByEmailPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <NavigationPage.TitleView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image 
                Margin = "0,0,80,0"
                HorizontalOptions = "Center"
                Source = "logo_superior.png" 
                VerticalOptions = "Center"
                WidthRequest = "75"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid>
            <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}"
                 RefreshColor="Orange"> 
                <ScrollView
                    BindingContext = "{Binding ProfilesByEmail}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                            <RowDefinition />
                            <RowDefinition Height="120"/>
                        </Grid.RowDefinitions>

                        <!--Titulo-->

                        <Label 
                        Grid.Row = "0" 
                        Text = "{i18n:Translate EmailProfileList}"
                        FontSize = "25"
                        FontAttributes="Bold"
                        TextColor = "{StaticResource MainColor}"
                        HorizontalOptions = "CenterAndExpand"
                        VerticalOptions = "EndAndExpand"  
                        Margin = "0,5,0,15"/>

                        <!--End Titulo-->

                        <!-- Lista de correos -->
                        <StackLayout 
                        Grid.Row="1"
                        HorizontalOptions="FillAndExpand"
                        Padding="25"
                        x:Name="EmailList" />

                        <!-- Botón de nuevo correo -->

                    </Grid>
                </ScrollView>
            </RefreshView>
            <ImageButton
                    Grid.Row="0"
                    BackgroundColor = "Transparent"
                    Clicked = "NewProfileEmail_Clicked"
                    HeightRequest = "60"
                    HorizontalOptions ="Center"
                    Source = "Plus"
                    VerticalOptions = "End"
                    WidthRequest = "60" />
        </Grid>
    </ContentPage.Content>
</ContentPage>