<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             x:Class="Mynfo.Views.ProfilesByPhonePage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <NavigationPage.TitleView>
        <Grid
            HeightRequest = "20">
            <StackLayout 
                HorizontalOptions="Start">
                <Label 
                    FontAttributes = "Bold"
                    FontSize = "18"
                    HorizontalOptions = "Start"
                    Text = "{i18n:Translate ProfilePhone}"
                    TextColor = "{StaticResource Dark_FontColor}"/>
            </StackLayout>
            <StackLayout
                HorizontalOptions = "End">
                <Image 
                    HeightRequest = "20"
                    HorizontalOptions = "End"
                    Source = "logo_superior.png" 
                    WidthRequest = "75" >
                </Image>
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView
            BindingContext = "{Binding ProfilesByPhone}">
            <StackLayout>
                <Label 
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" 
                    Text="Welcome to Xamarin.Forms!"/>
                <BoxView 
                    Grid.ColumnSpan = "3"
                    Grid.Row = "4"/>
                <Button
                    BackgroundColor = "Transparent"
                    Clicked = "NewProfilePhone_Clicked"
                    Grid.ColumnSpan = "3"
                    Grid.Row = "4"
                    HeightRequest = "60"
                    HorizontalOptions ="Center"
                    ImageSource = "Plus"
                    VerticalOptions = "Center"
                    WidthRequest = "60" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>