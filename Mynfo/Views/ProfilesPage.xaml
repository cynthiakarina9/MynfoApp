<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Mynfo.Views.ProfilesPage">
    <NavigationPage.TitleView>
        <Grid
            HeightRequest = "20">
            <StackLayout 
                HorizontalOptions="Start">
                <Label 
                    FontAttributes = "Bold"
                    FontSize = "18"
                    HorizontalOptions = "Start"
                    Text = "{i18n:Translate Profiles}"
                    TextColor = "{StaticResource Dark_FontColor}"/>
            </StackLayout>
            <StackLayout
                HorizontalOptions = "End">
                <Image 
                    HeightRequest = "20"
                    HorizontalOptions = "End"
                    Source = "logo_superior.png" 
                    WidthRequest = "75" >
                </Image>
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Profiles}">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="1" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--Titulo-->

                    <BoxView 
                        Grid.Row="0" 
                        Grid.ColumnSpan="2" 
                        BackgroundColor="Transparent"/>

                    <Label 
                        Grid.Row = "0" 
                        Grid.ColumnSpan = "3" 
                        Text = "{i18n:Translate ChooseTypeProfile}"
                        FontSize = "25"
                        FontAttributes="Bold"
                        TextColor = "{StaticResource MainColor}"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"  
                        Margin = "0,15,0,0"/>

                    <!--End Titulo-->

                    <!--BoxView 1-->

                    <BoxView 
                        Grid.Row="1" 
                        Color="Transparent"                  
                        CornerRadius="15" />

                    <ImageButton 
                        Grid.Row = "1"   
                        BackgroundColor = "Transparent"
                        CornerRadius = "40"
                        Source = "mail1.png"   
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "80"
                        HeightRequest = "80"
                        Margin = "25"
                        Clicked = "EmailProfile_Clicked"/>

                    <!--BoxView 2-->

                    <BoxView 
                        Grid.Row="1"
                        Grid.Column="1"
                        Color="Transparent"                 
                        CornerRadius="15" />

                    <ImageButton 
                        Grid.Row = "1" 
                        Grid.Column = "1"
                        BackgroundColor = "Transparent"
                        CornerRadius = "40"
                        HeightRequest = "80"
                        Source = "whatsapp1.png"
                        Clicked = "PhoneProfile_Clicked"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "80"/>

                    <!--BoxView 3-->

                    <BoxView 
                        Grid.Row="1"
                        Grid.Column="2"
                        Color="Transparent"                 
                        CornerRadius="15" />

                    <ImageButton 
                        Grid.Row = "1" 
                        Grid.Column = "2"
                        BackgroundColor = "Transparent"
                        CornerRadius = "40"
                        HeightRequest = "80"
                        Source = "facebook1.png"
                        Clicked = "FacebookProfile_Clicked"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "80"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>