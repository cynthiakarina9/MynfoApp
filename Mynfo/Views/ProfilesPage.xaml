<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Mynfo.Views.ProfilesPage">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Profiles}">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="75"/>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".12*" />
                        <ColumnDefinition Width=".35*"/>
                        <ColumnDefinition Width=".06*"/>
                        <ColumnDefinition Width=".35*"/>
                        <ColumnDefinition Width=".12*" />
                    </Grid.ColumnDefinitions>

                    <!--Titulo-->

                    <Label 
                        Grid.Row = "0" 
                        Grid.ColumnSpan = "5" 
                        Text = "{i18n:Translate ChooseTypeProfile}"
                        FontSize = "30"
                        FontAttributes="Bold"
                        TextColor = "{StaticResource MainColor}"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"  
                        Margin = "0,15,0,0"/>

                    <!--End Titulo-->

                    <!--BoxView 1-->

                    <ImageButton 
                        Grid.Row = "1"   
                        Grid.Column = "1"
                        BackgroundColor = "Transparent"
                        Source = "mail1.png"   
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "150"
                        HeightRequest = "150"
                        Clicked = "EmailProfile_Clicked"/>

                    <!--BoxView 2-->

                    <ImageButton 
                        Grid.Row = "1" 
                        Grid.Column = "3"
                        BackgroundColor = "Transparent"
                        HeightRequest = "150"
                        Source = "tel1.png"
                        Clicked = "PhoneProfile_Clicked"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "150"/>

                    <!--BoxView 3-->

                    <ImageButton 
                        Grid.Row = "2" 
                        Grid.Column = "1"
                        BackgroundColor = "Transparent"
                        HeightRequest = "150"
                        Source = "facebook1.png"
                        Clicked = "FacebookProfile_Clicked"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "150"/>

                    <ImageButton 
                        Grid.Row = "2" 
                        Grid.Column = "3"
                        BackgroundColor = "Transparent"
                        HeightRequest = "150"
                        Source = "whatsapp1.png"
                        Clicked = "WhatsAppProfile_Clicked"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"
                        WidthRequest = "150"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>