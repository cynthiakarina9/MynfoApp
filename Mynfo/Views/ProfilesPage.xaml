<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Mynfo.Views.ProfilesPage">
    <NavigationPage.TitleView>
        <Grid
            HeightRequest = "20">
            <StackLayout 
                HorizontalOptions="Start">
                <Label 
                    FontAttributes = "Bold"
                    FontSize = "18"
                    HorizontalOptions = "Start"
                    Text = "{i18n:Translate Profiles}"
                    TextColor = "{StaticResource Dark_FontColor}"/>
            </StackLayout>
            <StackLayout
                HorizontalOptions = "End">
                <Image 
                    HeightRequest = "20"
                    HorizontalOptions = "End"
                    Source = "logo_superior.png" 
                    WidthRequest = "75" >
                </Image>
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Profiles}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label 
                    Text = "{i18n:Translate ChooseTypeProfile}"
                    FontSize = "25"
                    FontAttributes="Bold"
                    TextColor = "{StaticResource MainColor}"
                    VerticalOptions = "EndAndExpand" />
                <StackLayout Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*" />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!--Titulo-->




                        <!--End Titulo-->

                        <!--BoxView 1-->

                        <BoxView 
                        Grid.Row="0" 
                        Color="Transparent"                  
                        CornerRadius="15" />

                        <!--<Button 
                        Grid.Row="1"                                
                        ImageSource="arroba3.png"   
                        AnchorX="100"
                        AnchorY="100"    
                        BackgroundColor="Transparent"
                        Clicked = "EmailProfile_Clicked"/>-->

                        <Button 
                        Grid.Row="1"   
                        BackgroundColor="{StaticResource MainColor}"
                        ImageSource="arroba4.png"   
                        WidthRequest      ="80"
                        HeightRequest     ="80"
                        CornerRadius      ="40"
                        VerticalOptions   ="Center"
                        HorizontalOptions ="Center"
                        Margin="25"
                        Clicked = "EmailProfile_Clicked"/>

                        <!--BoxView 2-->


                        <Button 
                        Clicked = "PhoneProfile_Clicked"
                        Grid.Row="1" 
                        BackgroundColor="{StaticResource MainColor}"
                        HeightRequest     ="80"
                        CornerRadius      ="40"
                        VerticalOptions   ="Center"
                        HorizontalOptions ="Center"
                        ImageSource="tel3.png"    
                        Margin="35"
                        WidthRequest    ="80"/>
                    </Grid>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>